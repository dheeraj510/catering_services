<div class="span5">
  <table class="table table-striped table-condensed">
    <thead>
    <tr>
      <th>List Name</th>
      <th>Items</th>
      <th>Created at</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @lists.each do |list| %>
    <tr>
      <td><%= list.name %></td>
      <td><% list.menu_ids.split(",").each do |id| %><%= Menu.find(id).name %> <% end %></td>
      <td><%= list.created_at.strftime("%d-%m-%Y") %></td>
      <td><%= link_to "Edit", edit_menu_list_path(list),:class=>"btn btn-primary" %></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>