
<%= form_for(@business,:validate => true, :url => businesses_dashboard_path(@business), :html => { :method => :put, :class => "form-horizontal" }) do |f| %>
    <%#= devise_error_messages! %>
    <fieldset>
      <!-- Address form -->

      <h2 class="text-info">EDIT YOUR ACCOUNT</h2>
      <br/>
      <%= image_tag @business.avatar.url(:thumb) %><br/>
      <span class="btn btn-success fileinput-button">
          <i class="glyphicon glyphicon-plus"></i>
          <span>Change Logo...</span>
        <%= f.file_field :avatar, :type => "file" %>
          </span>        <br/><br/>
      <!-- full-name input-->
      <div class="control-group">
        <label class="control-label">Full Name</label>
        <div class="controls">
          <%= f.text_field :name,
                           :validate => true,
                           :type => "text",
                           :placeholder =>"full name",
                           :class => "powertip input-xlarge",
                           :readonly => true,
                            :title => "hi"%>
          <p class="help-block"></p>
        </div>
      </div>
      <!-- address-line1 input-->
      <div class="control-group">
        <label class="control-label">Email</label>
        <div class="controls">
          <%= f.email_field :email,
                            :validate => true,
                            :type => "text",
                            :placeholder =>"email",
                            :class => "input-xlarge",
                            :readonly => true %></div>
      </div>
      <div class="control-group">
        <label class="control-label">Mobile Number</label>
        <div class="controls">
          <%= f.text_field :phone_number,
                           :validate => true,
                           :type => "text",
                           :placeholder =>"mobile number",
                           :class => "input-xlarge" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Alternate Phone Number</label>
        <div class="controls">
          <%= f.text_field :alternate_number,
                           :validate => true,
                           :type => "text",
                           :placeholder =>"alternate phone number",
                           :class => "input-xlarge" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Address</label>
        <div class="controls">
          <%= f.text_field :address,
                           :validate => true,
                           :type => "text",
                           :placeholder =>"Address",
                           :class => "input-xlarge" %>
        </div>
      </div>
      <!-- city input-->
      <div class="control-group">
        <label class="control-label">City / Town</label>
        <div class="controls">
          <%= f.text_field :city,
                           :validate => true,
                           :type => "text",
                           :placeholder =>"city",
                           :class => "input-xlarge" %>
          <p class="help-block"></p>
        </div>
      </div>
      <!-- region input-->
      <div class="control-group">
        <label class="control-label">State / Province / Region</label>
        <div class="controls">
          <%= f.text_field :state,
                           :validate => true,
                           :type => "text",
                           :placeholder =>"state",
                           :class => "input-xlarge" %>
          <p class="help-block"></p>
        </div>
      </div>
      <!-- postal-code input-->
      <div class="control-group">
        <label class="control-label">Zip / Postal Code</label>
        <div class="controls">
          <%= f.text_field :zipcode,
                           :validate => true,
                           :type => "text",
                           :placeholder =>"zipcode",
                           :class => "input-xlarge" %>
          <p class="help-block"></p>
        </div>
      </div>
      <!-- country select -->
      <div class="control-group">
        <label class="control-label">Country</label>
        <div class="controls">
          <%= f.text_field :country,
                           :validate => true,
                           :type => "text",
                           :placeholder =>"Please select the country",
                           :class => "input-xlarge" %>
        </div>
      </div>

    </fieldset>
    <div><%= f.submit "Update" %></div>
<% end %>


<script>
    function powerTipWithTitle() {
        arr = ["nw","n","ne","e","se","s","sw","w"]
        $.each(arr, function() {
            $('.powertip_'+this).powerTip({
                placement: this, // tooltip position
                smartPlacement: true
            });
        });
        $('.powertip_mouseover').powerTip({
            placement: "ne", // tooltip position
            smartPlacement: true ,
            mouseOnToPopup: true
        });
    }

    $(document).ready(function() {
        powerTipWithTitle();
    });
</script>
