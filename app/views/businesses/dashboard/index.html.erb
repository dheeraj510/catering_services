
<h2>Your Menu list</h2>

<div class="btn-toolbar">
  <%= link_to "Add New Item", add_menu_businesses_dashboard_index_path, :class =>"btn btn-primary" %>
  <button class="btn">Import</button>
  <button class="btn">Export</button>
</div>
<div class="well">
  <table class="table">
    <thead>
    <tr>
      <th>Item Name</th>
      <th>Description</th>
      <th>Type</th>
      <th>Price</th>
      <th style="width: 36px;"></th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <% @menu.each do |m| %>
          <td><%= m.name %></td>
          <td><%= m.description %></td>
          <td><%= m.item_type %></td>
          <td><%= m.price %></td>
          <td>
            <a href="#"><i class="icon-pencil"></i></a>
            <a href="#" role="button" data-toggle="modal"><i class="icon-remove"></i></a>
          </td>
          </tr>

      <% end %>
      </tbody>
  </table>
</div>
