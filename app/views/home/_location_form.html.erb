<div class="modal hide" id="change_location">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">x</button>
    <% if @location.nil? %>
        <h3>Please choose your Location</h3>
        <% else %>
    <h3>Your current Location Is <span style="color: darkgoldenrod"><%= @location %></span></h3>
        <% end %>
  </div>
  <div class="modal-body">
