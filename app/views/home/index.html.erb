              <%# if user_signed_in? %>
              $('.ajaxful-rating').click(function(){
                  new $.Zebra_Dialog('' +
                          'Thanks for Rating', {
                      'buttons':  false,
                      'modal': false,
                      'position': ['right - 20', 'top + 20'],
                      'auto_close': 2000
                  });
                  location.reload()
              })
              <%# end  %>

          </script>-->

      <% end %>
      <%= will_paginate @all_business, renderer: BootstrapPagination::Rails  %>
  <% else %>
      <% unless params[:search].blank? %>
          <p>Sorry, No search results found ! </p>
      <% end %>
  <% end %>

</div>


